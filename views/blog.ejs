<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <%- include('./partials/head') %>
  <title>Blogpage</title>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      color: #222;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .container {
      margin-top: 2rem;
      background: #ffffff;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
      font-weight: 600;
    }

    img.blog-image {
      width: 100%;
      max-width: 800px;
      border-radius: 12px;
      margin: 1rem 0;
      object-fit: cover;
      box-shadow: 0 4px 15px rgba(0,0,0,0.15);
    }

    img.author-image {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 10px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    .author-box {
      display: flex;
      align-items: center;
      margin-top: 1rem;
    }

    pre {
      background-color: #f1f1f1;
      padding: 1rem;
      border-radius: 8px;
      white-space: pre-wrap;
      font-family: 'Fira Code', monospace;
      color: #333;
    }

    .comment-box {
      background-color: #f9f9f9;
      border-left: 4px solid #007bff;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 8px;
    }

    .comment-box strong {
      color: #007bff;
    }

    .btn-primary {
      background: linear-gradient(135deg, #6f42c1, #007bff);
      border: none;
      font-weight: bold;
      transition: background 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #007bff, #6f42c1);
    }

    /* Dark Mode */
    body.dark-mode {
      background-color: #121212;
      color: #e0e0e0;
    }

    body.dark-mode .container {
      background-color: #1e1e1e;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.08);
    }

    body.dark-mode pre {
      background-color: #2c2c2c;
      color: #ccc;
    }

    body.dark-mode .comment-box {
      background-color: #2a2a2a;
      border-left: 4px solid #6f42c1;
    }

    body.dark-mode .btn-primary {
      background-color: #6f42c1 !important;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImage %>" class="blog-image" alt="Anime Image" />
    <pre><%= blog.body %></pre>
  </div>

  <div class="container author-box">
    <img src="<%= blog.createdby.image %>" class="author-image" alt="Author Image" />
    <p class="mb-0"><strong><%= blog.createdby.name %></strong></p>
  </div>

  <div class="container">
    <h2>Comments (<%= comment.length %>)</h2>

    <% if(locals.user){ %>
      <form action="/blog/comment/<%= blog.id %>" method="post">
        <div class="mb-3">
          <label for="commentInput" class="form-label">Add Comment</label>
          <input type="text" class="form-control" id="commentInput" name="comment"  />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    <% } %>
  </div>

  <div class="container">
    <% comment.forEach(element => { %>
      <div class="comment-box">
        <div class="d-flex align-items-center mb-2">
          <img src="<%= blog.createdby.image %>" class="author-image" alt="Commenter Image" />
          <strong><%= element.createdby.name %></strong>
        </div>
        <pre><%= element.comment %></pre>
      </div>
    <% }) %>
  </div>

  <%- include('./partials/link') %>

  <script>
    // Dark Mode Toggle Logic
    const toggleBtn = document.getElementById('darkModeToggle');

    function updateButtonText() {
      if (document.body.classList.contains('dark-mode')) {
        toggleBtn.textContent = 'â˜€ï¸ Light Mode';
      } else {
        toggleBtn.textContent = 'ðŸŒ™ Dark Mode';
      }
    }

    toggleBtn.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      updateButtonText();
      localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light');
    });

    window.addEventListener('DOMContentLoaded', () => {
      if (localStorage.getItem('theme') === 'dark') {
        document.body.classList.add('dark-mode');
      }
      updateButtonText();
    });
  </script>
</body>
</html>

